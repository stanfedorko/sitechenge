extends templates/template-login.pug

block content

	// .main
	main.main
		section.section-login
			.container
				form.form-login
					h5.form-title
						| Sign In
					.form-group
						label(for='exampleInputEmail1') Email address
						input#exampleInputEmail1.form-control(type='email', aria-describedby='emailHelp', placeholder='Your email addressâ€¦')
					.form-group
						.row
							.col-sm-6.order-1.order-sm-1
								label(for='exampleInputPassword1') Password
							.col-sm-6.text-sm-right.text-left.order-3.order-sm-2
								a(href="#0").text-success
									| Forgot password?
							.col-sm-12.order-2.order-sm-3
								input#exampleInputPassword1.form-control(type='password', placeholder='Enter your password')
					.custom-control.custom-checkbox
						input#customCheck1.custom-control-input(type='checkbox')
						label.custom-control-label(for='customCheck1') Check this custom checkbox
					button.btn.btn-success.w-100(type='submit') Login
